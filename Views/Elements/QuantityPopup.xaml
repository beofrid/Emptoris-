<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="Emptoris.Views.Elements.QuantityPopup">

    <VerticalStackLayout Padding="20" Spacing="15" BackgroundColor="{StaticResource Secondary}">
        <Label Text="Quantidade:" FontSize="Medium" HorizontalOptions="Center" />
        <Entry x:Name="QuantityEntry" Placeholder="Digite a quantidade" Keyboard="Numeric" FontSize="20"/>
        <Button Text="Adicionar" Clicked="OnAddClicked" />
    </VerticalStackLayout>

</toolkit:Popup>
